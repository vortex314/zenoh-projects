{
  // VS Code Debug configurations for Rust (CodeLLDB)
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug zenoh-linux-eventbus-rs",
      "type": "lldb",
      "request": "launch",
      "cargo": {
        "args": ["build"],
        "filter": {
          "kind": "bin",
          "name": "zenoh-linux-eventbus-rs"
        }
      },
      "program": "${workspaceFolder}/target/debug/zenoh-linux-eventbus-rs",
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "RUST_BACKTRACE": "full"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Debug (run cargo)",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/target/debug/zenoh-linux-eventbus-rs",
      "args": [],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "cargo run",
      "env": {
        "RUST_BACKTRACE": "full"
      },
      "console": "integratedTerminal"
    }
  ]
}